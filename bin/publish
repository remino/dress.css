#!/usr/bin/env bash

main() {
	set -e

	[ $# -lt 2 ] && echo "Usage: $( basename "$0" ) <major|minor|version> <npm_otp>" && exit 16

	cd "$( dirname "${BASH_SOURCE[0]}" )/.." || exit 17

	npm version "$1"
	git push origin --all && git push origin --tags
	mansite -b deploy
	npm run build
	gh release create ` git tag | tail -1 ` --generate-notes dist/sem.css
	npm publish --otp "$2"
}

main "$@"
